<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:paddingBottom="7dp"
            android:paddingTop="7dp">


            <TextView
                android:id="@+id/card_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/audiowide"
                android:gravity="center"
                android:text="textotexto"
                android:textColor="@color/greyText"
                android:textSize="19sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/item_left"
                    android:layout_centerVertical="true"
                    android:paddingStart="20dp"
                    android:paddingRight="10dp"
                    android:layout_width="230dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/press_start_2p"
                    android:gravity="center"
                    android:padding="5dp"
                    android:textSize="17sp" />


                <TextView
                    android:id="@+id/item_right"
                    android:layout_centerVertical="true"
                    android:paddingLeft="10dp"
                    android:paddingEnd="20dp"
                    android:layout_width="230dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/press_start_2p"
                    android:gravity="center"
                    android:padding="5dp"
                    android:textSize="17sp"
                    android:layout_alignParentEnd="true"/>


                <ImageView
                    android:layout_width="352dp"
                    android:layout_height="match_parent"
                    android:paddingBottom="20dp"
                    android:paddingLeft="0dp"
                    android:paddingRight="0dp"
                    android:paddingTop="20dp"
                    android:scaleType="centerCrop"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/card_back" />


                <com.yuyakaido.android.cardstackview.CardStackView
                    android:id="@+id/cardstack"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clipToPadding="false"
                    android:paddingLeft="250dp"
                    android:paddingRight="250dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:stackFrom="bottom"
                    app:swipeDirection="horizontal"
                    android:layout_centerHorizontal="true"
                    app:visibleCount="1">


                </com.yuyakaido.android.cardstackview.CardStackView>

                <TextView
                    android:id="@+id/arrow_left"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/press_start_2p"
                    android:gravity="start"
                    android:paddingStart="260dp"
                    android:textSize="30sp"
                    android:text="&lt;"
                    android:shadowColor="@color/background"
                    android:shadowDx="2"
                    android:shadowDy="2"
                    android:shadowRadius="2" />

                <TextView
                    android:id="@+id/arrow_right"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/press_start_2p"
                    android:gravity="start"
                    android:paddingEnd="260dp"
                    android:textSize="30sp"
                    android:text=">"
                    android:layout_alignParentEnd="true"
                    android:shadowColor="@color/background"
                    android:shadowDx="2"
                    android:shadowDy="2"
                    android:shadowRadius="2" />

            </RelativeLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3">


                <TextView
                    android:id="@+id/toggle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/press_start_2p"
                    android:gravity="center"
                    android:paddingTop="5dp"
                    android:text="ðŸ”´"
                    android:textSize="40sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/icon_hype"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:layout_width="95dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/icon_hype_10" />

                <ImageView
                    android:id="@+id/icon_crew"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:layout_width="95dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/icon_crew_10" />


                <ImageView
                    android:id="@+id/icon_software"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/icon_software_10"
                    android:layout_width="95dp"
                    />

                <ImageView
                    android:id="@+id/icon_money"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:layout_width="95dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/icon_money_10"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3">

                <TextView
                    android:id="@+id/score"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/press_start_2p"
                    android:gravity="center"
                    android:paddingTop="5dp"
                    android:text="0"
                    android:textColor="@color/colorAccent"
                    android:textSize="30sp"
                    android:shadowColor="@color/greyText"
                    android:shadowDx="2"
                    android:shadowDy="2"
                    android:shadowRadius="2" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <ProgressBar
        android:id="@+id/activity_main_progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />

</RelativeLayout>
